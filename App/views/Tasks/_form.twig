<section id="task_create">
  <div class="container">
    <form method="POST">
      <div class="input-group form-group">
        <input name="name" type="text" class="form-control" placeholder="Имя"
               value="{{ model.name }}" {{ model.canEditAttribute('name')?'':'readonly' }} >
        {% if model.getAttributeErrorMsg('name') %}
          <div class="alert alert-danger" role="alert">
            {{ model.getAttributeErrorMsg('name')|raw }}
          </div>
        {% endif %}
      </div>

      <div class="input-group form-group">
        <input name="email" type="text" class="form-control" placeholder="email"
               value="{{ model.email }}" {{ model.canEditAttribute('email')?'':'readonly' }} >
        {% if model.getAttributeErrorMsg('email') %}
          <div class="alert alert-danger" role="alert">
            {{ model.getAttributeErrorMsg('email')|raw }}
          </div>
        {% endif %}
      </div>

      <div class="input-group form-group">
        <textarea name="text" class="form-control" placeholder="Задание"
            {{ model.canEditAttribute('text')?'':'readonly' }}>{{ model.text }}</textarea>
        {% if model.getAttributeErrorMsg('text') %}
          <div class="alert alert-danger" role="alert">
            {{ model.getAttributeErrorMsg('text')|raw }}
          </div>
        {% endif %}
      </div>

      {% if model.canEditAttribute('status') %}
        <div class="form-check">
          <input type="hidden" name="status" value="0">
          <input type="checkbox" class="form-check-input" id="exampleCheck1" name="status" value="1" {{ model.status?'checked':'' }}>
          <label class="form-check-label" for="exampleCheck1">Выполнено</label>
        </div>
      {% endif %}

      <div class="form-group">
        <a href="/" class="btn btn-warning">Назад</a>
        <input type="submit" value="Сохранить" class="btn btn-primary">
      </div>
    </form>
  </div>
</section>