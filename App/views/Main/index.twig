{% if tasks %}
  <section id="task_list">
    <div class="container">
      <h2>Текущие задания</h2>

      <div class="row">
        <div class="col-12">
          <div class="dropdown show">
            Сортировка:
            <a class="btn btn-secondary dropdown-toggle" href="https://example.com" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              {{ orderName }}
            </a>

            <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
              {% for key,order in orderList %}
                <a class="dropdown-item" href="/{{ key?('order:'~key):'' }}">{{ order }}</a>
              {% endfor %}
            </div>
          </div>
        </div>
      </div>
      <hr>

      <div class="row">
        {% for task in tasks %}
          <div class="col-4 task_list-item">
            <h3>{{ task.name }}</h3>
          </div>
        {% endfor %}
      </div>

      {% if pagination %}
        <hr>
        <nav aria-label="Page navigation example">
          <ul class="pagination">
            <li class="page-item {{ pagination.page==1?'disabled':'' }}"><a class="page-link" href="{{ pagination.prev_link }}">Назад</a></li>
            {% for page in 1..pagination.total %}
              <li class="page-item {{ pagination.page==page?'active':'' }}"><a class="page-link" href="{{ pagination.url }}{{ (page==1?'/':'/page_'~page) }}">{{ page }}</a></li>
            {% endfor %}
            <li class="page-item {{ pagination.page==pagination.total?'disabled':'' }}"><a class="page-link" href="{{ pagination.next_link }}">Вперед</a></li>
          </ul>
        </nav>
      {% endif %}
    </div>
  </section>
{% endif %}